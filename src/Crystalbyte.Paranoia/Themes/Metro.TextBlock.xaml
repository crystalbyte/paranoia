<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled" />
        <Setter Property="Foreground" Value="{DynamicResource Metro.NormalTextBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource Metro.NormalFontSize}" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource Metro.DisabledBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Metro.ThinTextStyle"
           BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Thin" />
    </Style>

    <Style x:Key="Metro.TitleTextStyle"
           BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock">
        <Setter Property="Margin" Value="0,6,0,6" />
        <Setter Property="FontSize" Value="{DynamicResource Metro.LargeFontSize}" />
        <Setter Property="FontWeight" Value="Thin" />
    </Style>

    <Style x:Key="Metro.SubtitleTextStyle"
           BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock">

        <Setter Property="FontWeight" Value="Thin" />
        <Setter Property="Margin" Value="0,2,0,2" />
        <Setter Property="Foreground" Value="{DynamicResource Metro.SecondaryTextBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource Metro.MediumFontSize}" />
    </Style>

    <Style x:Key="Metro.LabelTextStyle"
           BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="{DynamicResource Metro.SmallFontSize}" />
        <Setter Property="Margin" Value="12,3,6,3" />
    </Style>

    <Style x:Key="Metro.DescriptionTextStyle"
           BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource Metro.App.AccentBrush}" />
        <Setter Property="Margin" Value="0,4,0,8" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <Style x:Key="Metro.MenuHeaderTextStyle"
           BasedOn="{StaticResource {x:Type TextBlock}}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource Metro.SmallFontSize}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="6,0,6,0" />
        <Setter Property="MinWidth" Value="70" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

</ResourceDictionary>