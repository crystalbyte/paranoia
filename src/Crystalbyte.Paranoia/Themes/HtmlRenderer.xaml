<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:html="clr-namespace:Crystalbyte.Paranoia.Html;assembly=Crystalbyte.Paranoia.Html"
                    xmlns:ui="clr-namespace:Crystalbyte.Paranoia.UI">
    <Style TargetType="{x:Type ui:HtmlRenderer}">
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:HtmlRenderer}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <html:HtmlPanel Text="Hi I'm HTML" />
                        </WindowsFormsHost>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>