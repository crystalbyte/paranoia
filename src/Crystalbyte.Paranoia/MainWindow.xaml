<ui:MetroWindow x:Class="Crystalbyte.Paranoia.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:converters="clr-namespace:Crystalbyte.Paranoia.UI.Converters"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:paranoia="clr-namespace:Crystalbyte.Paranoia"
                xmlns:properties="clr-namespace:Crystalbyte.Paranoia.Properties"
                xmlns:ui="clr-namespace:Crystalbyte.Paranoia.UI"
                Title="p4r4n014"
                Width="1080"
                Height="668"
                MinWidth="800"
                MinHeight="600"
                Background="{StaticResource WindowBackgroundBrush}"
                Icon="/Assets/icon.png"
                RenderOptions.ClearTypeHint="Enabled"
                UseLayoutRounding="True"
                WindowStartupLocation="CenterScreen"
                d:DataContext="{d:DesignInstance paranoia:AppContext}"
                mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="380" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <ComboBox Margin="6"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Background="{StaticResource WindowBackgroundBrush}"
                      ItemsSource="{Binding Accounts}"
                      SelectionChanged="OnAccountsSelectionChanged">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Width="48"
                                   VerticalAlignment="Center"
                                   Source="{Binding Address,
                                                    IsAsync=True,
                                                    Converter={StaticResource GravatarImageConverter}}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Foreground="{StaticResource AppDarkTextBrush}"
                                       Style="{StaticResource AppTitleTextStyle}"
                                       Text="{Binding Name}"
                                       TextWrapping="NoWrap" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Style="{StaticResource AppSubtitleTextStyle}"
                                       Text="{Binding Address}" />
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="0"
              Background="#333">
            <ListView Background="{StaticResource WindowLightBackgroundBrush}"
                      BorderThickness="0"
                      DataContext="{Binding SelectedAccount}"
                      ItemsSource="{Binding Contacts}"
                      SelectionChanged="OnContactsSelectionChanged"
                      d:DataContext="{d:DesignInstance paranoia:MailAccountContext}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="6,3,6,3" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0"
                                   Grid.Column="0"
                                   Width="38"
                                   Margin="0,0,6,0"
                                   Source="{Binding Address,
                                                    Converter={StaticResource GravatarImageConverter}}" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,-3,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock FontSize="18"
                                           Style="{StaticResource AppTitleTextStyle}"
                                           Text="{Binding Name}" />
                                <TextBlock FontSize="{StaticResource AppSmallFontSize}"
                                           Style="{StaticResource AppSubtitleTextStyle}"
                                           Text="{Binding Address}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="1"
                      Background="{StaticResource WindowLightBackgroundBrush}"
                      BorderThickness="0"
                      ItemsSource="{Binding MessagesSource}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="6,3,6,3" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="ToolTip" Value="{Binding Subject}" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="paranoia:MailMessageContext">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0"
                                   Grid.Column="0"
                                   Width="42"
                                   Margin="0,0,6,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="{Binding FromAddress,
                                                    IsAsync=True,
                                                    Converter={StaticResource GravatarImageConverter}}" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Width="280"
                                           FontSize="17"
                                           FontWeight="Thin"
                                           Style="{StaticResource AppNormalTextStyle}"
                                           Text="{Binding Subject,
                                                          Converter={StaticResource IgnoreLinebreaksConverter}}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap" />
                                <TextBlock HorizontalAlignment="Left"
                                           FontSize="{StaticResource AppSmallFontSize}"
                                           Style="{StaticResource AppSubtitleTextStyle}"
                                           Text="{Binding FromName}" />
                            </StackPanel>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
        <ListView Grid.Row="0"
                  Grid.Column="2"
                  HorizontalContentAlignment="Stretch"
                  Background="{StaticResource WindowLightBackgroundBrush}"
                  BorderThickness="0"
                  DataContext="{Binding SelectedAccount}"
                  ItemsSource="{Binding Mailboxes}"
                  SelectionChanged="OnMailboxSelectionChanged"
                  d:DataContext="{d:DesignInstance paranoia:MailAccountContext}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="2" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="MailboxLayoutRoot">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Width="24"
                               HorizontalAlignment="Left"
                               Source="/Assets/folder.png"
                               ToolTip="{Binding Name}" />
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource AppSmallFontSize}"
                                   Style="{StaticResource AppNormalTextStyle}"
                                   Text="{Binding Type,
                                                  Converter={StaticResource MailboxLocalizer}}">
                            <TextBlock.Foreground>
                                <Binding Path="IsAssigned">
                                    <Binding.Converter>
                                        <converters:BooleanToBrushConverter BrushForFalse="{StaticResource AppControlBrush}" BrushForTrue="{StaticResource AppLightTextBrush}" />
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <Popup Grid.Row="0"
                               Grid.Column="0"
                               AllowsTransparency="True"
                               IsOpen="{Binding IsMailboxAssignable,
                                                Mode=TwoWay}"
                               Placement="Center"
                               PlacementTarget="{Binding ElementName=MailboxLayoutRoot}"
                               VerticalOffset="320">
                            <StackPanel Width="300"
                                        Height="600"
                                        Margin="0,0,8,8">
                                <StackPanel.Effect>
                                    <DropShadowEffect />
                                </StackPanel.Effect>
                                <Polygon Fill="{StaticResource WindowLightBackgroundBrush}"
                                         Points="150 0 140 12 160 12"
                                         Stroke="{DynamicResource {ComponentResourceKey TypeInTargetAssembly=paranoia:App,
                                                                                        ResourceId=AppAccentBrush}}" />
                                <Border Margin="0,-1,0,0"
                                        Background="{StaticResource WindowLightBackgroundBrush}"
                                        BorderBrush="{DynamicResource {ComponentResourceKey TypeInTargetAssembly=paranoia:App,
                                                                                            ResourceId=AppAccentBrush}}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Rectangle Grid.Row="0"
                                                   Width="18.5"
                                                   Height="2"
                                                   Margin="0,-1.4,0,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   Panel.ZIndex="500"
                                                   Fill="{StaticResource WindowLightBackgroundBrush}"
                                                   RenderOptions.EdgeMode="Aliased"
                                                   StrokeThickness="0" />
                                        <StackPanel Grid.Row="0"
                                                    Margin="6,6,6,0"
                                                    Panel.ZIndex="250">
                                            <TextBlock Style="{StaticResource AppTitleTextStyle}" Text="{Binding Type, Converter={StaticResource MailboxLocalizer}}" />
                                            <TextBlock FontSize="{StaticResource AppSmallFontSize}"
                                                       Style="{StaticResource AppSubtitleTextStyle}"
                                                       Text="{x:Static properties:Resources.MailboxAssignmentDescription}" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Margin="0,12,0,6"
                                                    Background="{StaticResource WindowBackgroundBrush}">
                                            <Border Padding="6">
                                                <TreeView x:Name="CandidatesView"
                                                          MinHeight="200"
                                                          Background="{StaticResource WindowBackgroundBrush}"
                                                          BorderThickness="0"
                                                          ItemsSource="{Binding MailboxCandidates}"
                                                          SelectedValuePath="Info">
                                                    <TreeView.ItemContainerStyle>
                                                        <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                                                        <Style TargetType="TreeViewItem">
                                                            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                                                            <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                                                        </Style>
                                                        <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                                                    </TreeView.ItemContainerStyle>
                                                    <TreeView.ItemTemplate>
                                                        <HierarchicalDataTemplate DataType="paranoia:MailboxCandidateContext" ItemsSource="{Binding Children}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Width="20"
                                                                       VerticalAlignment="Center"
                                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                                       Source="Assets/folder.png" />
                                                                <TextBlock VerticalAlignment="Center"
                                                                           Style="{StaticResource AppNormalTextStyle}"
                                                                           Text="{Binding Name}" />
                                                            </StackPanel>
                                                        </HierarchicalDataTemplate>
                                                    </TreeView.ItemTemplate>
                                                </TreeView>
                                            </Border>

                                        </StackPanel>
                                        <Button Grid.Row="2"
                                                Margin="6,0,6,6"
                                                HorizontalAlignment="Right"
                                                Command="{Binding AssignMailboxCommand}"
                                                CommandParameter="{Binding SelectedValue,
                                                                           ElementName=CandidatesView}"
                                                Content="Assign"
                                                Padding="3" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Popup>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="2"
                      Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />
        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              Grid.Column="4"
              Background="White" />


    </Grid>
</ui:MetroWindow>