<ui:MetroWindow x:Class="Crystalbyte.Paranoia.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:converters="clr-namespace:Crystalbyte.Paranoia.UI.Converters"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:paranoia="clr-namespace:Crystalbyte.Paranoia"
                xmlns:properties="clr-namespace:Crystalbyte.Paranoia.Properties"
                xmlns:ui="clr-namespace:Crystalbyte.Paranoia.UI"
                Title="p4r4n014"
                Width="1080"
                Height="668"
                MinWidth="800"
                MinHeight="600"
                Background="{StaticResource AppBackgroundBrush}"
                Icon="/Assets/icon.png"
                RenderOptions.ClearTypeHint="Enabled"
                UseLayoutRounding="True"
                WindowStartupLocation="CenterScreen"
                d:DataContext="{d:DesignInstance paranoia:AppContext}"
                mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="240" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="340" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="340" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0"
                   Grid.RowSpan="3"
                   Grid.Column="0"
                   Fill="{StaticResource AppLightBackgroundBrush}"
                   RenderOptions.EdgeMode="Aliased" />
        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   LastChildFill="True">
            <Image Height="20"
                   Margin="8"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"
                   Source="{Binding Icon,
                                    RelativeSource={RelativeSource FindAncestor,
                                                                   AncestorType=paranoia:MainWindow}}" />
            <TextBlock Margin="0,-3,0,0"
                       VerticalAlignment="Center"
                       FontSize="17"
                       Style="{StaticResource AppTitleTextStyle}"
                       Text="{Binding Title,
                                      RelativeSource={RelativeSource FindAncestor,
                                                                     AncestorType=paranoia:MainWindow}}" />
        </DockPanel>
        <Grid Grid.Row="0"
              Grid.Column="4"
              HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <!--  help button  -->
                <ColumnDefinition Width="Auto" />
                <!--  minimize button  -->
                <ColumnDefinition Width="Auto" />
                <!--  restore down button  -->
                <ColumnDefinition Width="Auto" />
                <!--  maximize down button  -->
                <ColumnDefinition Width="Auto" />
                <!--  close button  -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{DynamicResource {ComponentResourceKey ResourceId=HelpButtonStyle, TypeInTargetAssembly={x:Type paranoia:App}}}" />
            <Button Grid.Column="1" Style="{DynamicResource {ComponentResourceKey ResourceId=MinimizeButtonStyle, TypeInTargetAssembly={x:Type paranoia:App}}}" />
            <Button Grid.Column="2"
                    Style="{DynamicResource {ComponentResourceKey ResourceId=MaximizeButtonStyle,
                                                                  TypeInTargetAssembly={x:Type paranoia:App}}}"
                    Visibility="{Binding IsNormalized,
                                         Converter={StaticResource BooleanToVisibilityConverter},
                                         RelativeSource={RelativeSource FindAncestor,
                                                                        AncestorType=paranoia:MainWindow}}" />
            <Button Grid.Column="3"
                    Style="{DynamicResource {ComponentResourceKey ResourceId=RestoreDownButtonStyle,
                                                                  TypeInTargetAssembly={x:Type paranoia:App}}}"
                    Visibility="{Binding IsMaximized,
                                         Converter={StaticResource BooleanToVisibilityConverter},
                                         RelativeSource={RelativeSource FindAncestor,
                                                                        AncestorType=paranoia:MainWindow}}" />
            <Button Grid.Column="4" Style="{DynamicResource {ComponentResourceKey ResourceId=CloseButtonStyle, TypeInTargetAssembly={x:Type paranoia:App}}}" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0"
                   Grid.Column="0"
                   Width="128"
                   Height="128"
                   Margin="8,32,8,8"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   DataContext="{Binding SelectedAccount}"
                   Source="{Binding Address,
                                    Converter={StaticResource GravatarImageConverter},
                                    IsAsync=True}"
                   Stretch="UniformToFill" />
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="8,0,0,0"
                       DataContext="{Binding SelectedAccount}"
                       Style="{StaticResource AppTitleTextStyle}"
                       Text="{Binding Name}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="8,0,0,0"
                       DataContext="{Binding SelectedAccount}"
                       Style="{StaticResource AppSubtitleTextStyle}"
                       Text="{Binding Address}"
                       TextTrimming="CharacterEllipsis" />
            <!--
                <ComboBox x:Name="AccountsComboBox"
                Grid.Row="1"
                Margin="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding Accounts}"
                SelectedValue="{Binding SelectedAccount,
                Mode=TwoWay}"
                SelectionChanged="OnAccountsSelectionChanged">
                <ComboBox.ItemContainerStyle>
                <Style TargetType="{x:Type ComboBoxItem}">
            -->
            <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
            <!--
                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0" />
            -->
            <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
            <!--
                </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                <DataTemplate>
                <Grid>
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Width="24"
                VerticalAlignment="Center"
                Source="{Binding Address,
                Converter={StaticResource GravatarImageConverter},
                IsAsync=True}" />
                <TextBlock Grid.Row="0"
                Grid.Column="1"
                Foreground="{StaticResource AppDarkTextBrush}"
                Style="{StaticResource AppTitleTextStyle}"
                Text="{Binding Name}"
                TextWrapping="NoWrap" />
                <TextBlock Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource AppSubtitleTextStyle}"
                Text="{Binding Address}" />
                </Grid>
                </DataTemplate>
                </ComboBox.ItemTemplate>
                </ComboBox>
            -->
            <ListView Grid.Row="3"
                      Grid.Column="0"
                      Margin="0"
                      Background="Transparent"
                      BorderThickness="0"
                      DataContext="{Binding SelectedAccount}"
                      ItemsSource="{Binding Contacts}"
                      SelectionChanged="OnContactsSelectionChanged"
                      d:DataContext="{d:DesignInstance {x:Type paranoia:MailAccountContext}}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="6,3,6,3" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0"
                                   Grid.Column="0"
                                   Width="38"
                                   Margin="0,0,6,0"
                                   Source="{Binding Address,
                                                    Converter={StaticResource GravatarImageConverter}}" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,-3,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock FontSize="18"
                                           Style="{StaticResource AppTitleTextStyle}"
                                           Text="{Binding Name}" />
                                <TextBlock FontSize="{StaticResource AppSmallFontSize}"
                                           Style="{StaticResource AppSubtitleTextStyle}"
                                           Text="{Binding Address}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="1"
                      Margin="0,0,0.2,0.4"
                      Style="{StaticResource VerticalSplitterStyle}" />
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="1"
              Grid.ColumnSpan="3"
              Margin="7,0,6.8,0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ListView Grid.Row="1"
                      HorizontalContentAlignment="Stretch"
                      Background="{StaticResource AppLightBackgroundBrush}"
                      BorderThickness="0"
                      ItemsSource="{Binding MessagesSource}"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="6,3,6,3" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="ToolTip" Value="{Binding Subject}" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="paranoia:MailMessageContext">
                        <Grid IsHitTestVisible="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Width="42"
                                   Margin="0,0,6,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="{Binding FromAddress,
                                                    Converter={StaticResource GravatarImageConverter},
                                                    IsAsync=True}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       FontSize="17"
                                       FontWeight="Thin"
                                       Style="{StaticResource AppNormalTextStyle}"
                                       Text="{Binding Subject,
                                                      Converter={StaticResource IgnoreLinebreaksConverter}}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalAlignment="Left"
                                       FontSize="{StaticResource AppSmallFontSize}"
                                       Style="{StaticResource AppSubtitleTextStyle}"
                                       Text="{Binding FromName}" />

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
        <ListView Grid.Row="1"
                  Grid.Column="2"
                  Margin="0"
                  HorizontalContentAlignment="Stretch"
                  Background="{StaticResource AppLightBackgroundBrush}"
                  BorderThickness="0"
                  DataContext="{Binding SelectedAccount}"
                  ItemsSource="{Binding Mailboxes}"
                  SelectionChanged="OnMailboxSelectionChanged"
                  d:DataContext="{d:DesignInstance {x:Type paranoia:MailAccountContext}}">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="2" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="MailboxLayoutRoot">
                        <Grid.InputBindings>
                            <KeyBinding Key="Delete" Command="{Binding DropMailboxCommand}" />
                        </Grid.InputBindings>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Width="24"
                               HorizontalAlignment="Left"
                               Source="/Assets/folder.png"
                               ToolTip="{Binding Name}" />
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource AppSmallFontSize}"
                                   Style="{StaticResource AppNormalTextStyle}"
                                   Text="{Binding Type,
                                                  Converter={StaticResource MailboxLocalizer}}">
                            <TextBlock.Foreground>
                                <Binding Path="IsAssigned">
                                    <Binding.Converter>
                                        <converters:BooleanToBrushConverter BrushForFalse="{StaticResource AppDisabledTextBrush}" BrushForTrue="{StaticResource AppLightTextBrush}" />
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <Popup x:Name="AssignmentPopup"
                               Grid.Row="0"
                               Grid.Column="0"
                               AllowsTransparency="True"
                               IsOpen="{Binding IsAssignable,
                                                Mode=OneWay}"
                               Placement="Center"
                               PlacementTarget="{Binding ElementName=MailboxLayoutRoot}"
                               StaysOpen="False"
                               VerticalOffset="320">
                            <StackPanel Width="300"
                                        Height="600"
                                        Margin="0,0,8,8">
                                <StackPanel.Effect>
                                    <DropShadowEffect />
                                </StackPanel.Effect>
                                <Polygon Fill="{StaticResource AppLightBackgroundBrush}"
                                         Points="150,0 140,12 160,12"
                                         Stroke="{DynamicResource {ComponentResourceKey ResourceId=AppAccentBrush,
                                                                                        TypeInTargetAssembly={x:Type paranoia:App}}}" />
                                <Border Margin="0,-1,0,0"
                                        Background="{StaticResource AppLightBackgroundBrush}"
                                        BorderBrush="{DynamicResource {ComponentResourceKey ResourceId=AppAccentBrush,
                                                                                            TypeInTargetAssembly={x:Type paranoia:App}}}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Rectangle Grid.Row="0"
                                                   Width="18.5"
                                                   Height="2"
                                                   Margin="0,-1.4,0,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   Panel.ZIndex="500"
                                                   Fill="{StaticResource AppLightBackgroundBrush}"
                                                   RenderOptions.EdgeMode="Aliased"
                                                   StrokeThickness="0" />
                                        <StackPanel Grid.Row="0"
                                                    Margin="6,6,6,0"
                                                    Panel.ZIndex="250">
                                            <TextBlock Style="{StaticResource AppTitleTextStyle}" Text="{Binding Type, Converter={StaticResource MailboxLocalizer}}" />
                                            <TextBlock FontSize="{StaticResource AppSmallFontSize}"
                                                       Style="{StaticResource AppSubtitleTextStyle}"
                                                       Text="{x:Static properties:Resources.MailboxAssignmentDescription}" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Margin="0,12,0,6"
                                                    Background="{StaticResource AppBackgroundBrush}">
                                            <Border Padding="6">
                                                <TreeView x:Name="CandidatesView"
                                                          MinHeight="200"
                                                          Background="{StaticResource AppBackgroundBrush}"
                                                          BorderThickness="0"
                                                          ItemsSource="{Binding MailboxCandidates}"
                                                          SelectedItemChanged="OnCandidatesViewSelectedItemChanged"
                                                          SelectedValuePath="Info">
                                                    <TreeView.ItemContainerStyle>
                                                        <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                                                        <Style TargetType="{x:Type TreeViewItem}">
                                                            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                                                            <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                                                        </Style>
                                                        <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                                                    </TreeView.ItemContainerStyle>
                                                    <TreeView.ItemTemplate>
                                                        <HierarchicalDataTemplate DataType="paranoia:MailboxCandidateContext" ItemsSource="{Binding Children}">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Width="20"
                                                                       VerticalAlignment="Center"
                                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                                       Source="Assets/folder.png" />
                                                                <TextBlock VerticalAlignment="Center"
                                                                           Style="{StaticResource AppNormalTextStyle}"
                                                                           Text="{Binding Name}">
                                                                    <TextBlock.Foreground>
                                                                        <Binding Path="IsSelectable">
                                                                            <Binding.Converter>
                                                                                <converters:BooleanToBrushConverter BrushForFalse="{StaticResource AppDisabledTextBrush}" BrushForTrue="{StaticResource AppLightTextBrush}" />
                                                                            </Binding.Converter>
                                                                        </Binding>
                                                                    </TextBlock.Foreground>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </HierarchicalDataTemplate>
                                                    </TreeView.ItemTemplate>
                                                </TreeView>
                                            </Border>

                                        </StackPanel>
                                        <Button Grid.Row="2"
                                                Margin="6,0,6,6"
                                                HorizontalAlignment="Right"
                                                Command="{Binding AssignMailboxCommand}"
                                                CommandParameter="{Binding SelectedValue,
                                                                           ElementName=CandidatesView}"
                                                Content="Assign"
                                                Padding="3" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Popup>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="3"
                      Grid.ColumnSpan="2"
                      Margin="0.4,0,468.6,0.4"
                      Style="{StaticResource VerticalSplitterStyle}" />
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="4"
              Margin="0.2,0,-0.4,0.4">
            <TextBlock Text="{Binding Html}" />
        </Grid>
    </Grid>
</ui:MetroWindow>