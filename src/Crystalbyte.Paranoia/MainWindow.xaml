<ui:MetroWindow x:Class="Crystalbyte.Paranoia.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:converters="clr-namespace:Crystalbyte.Paranoia.UI.Converters"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:paranoia="clr-namespace:Crystalbyte.Paranoia"
                xmlns:properties="clr-namespace:Crystalbyte.Paranoia.Properties"
                xmlns:ui="clr-namespace:Crystalbyte.Paranoia.UI"
                Title="p4r4n014"
                Width="1680"
                Height="1024"
                MinWidth="1024"
                MinHeight="600"
                Background="{StaticResource AppBackgroundBrush}"
                Icon="/Assets/icon.png"
                RenderOptions.ClearTypeHint="Enabled"
                UseLayoutRounding="True"
                WindowStartupLocation="CenterScreen"
                d:DataContext="{d:DesignInstance paranoia:AppContext}"
                mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"
                              MinWidth="280"
                              MaxWidth="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.48*"
                              MinWidth="260"
                              MaxWidth="800" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <CollectionViewSource x:Key="MessagesSource" Source="{Binding Messages}" />
        </Grid.Resources>
        <Rectangle Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Fill="{StaticResource AppLightBackgroundBrush}"
                   Opacity="{StaticResource ShadeOpacity}"
                   RenderOptions.EdgeMode="Aliased" />
        <Image Grid.Row="0"
               Grid.RowSpan="3"
               Grid.Column="0"
               Grid.ColumnSpan="5"
               Margin="0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="/Assets/background.jpg"
               Stretch="UniformToFill" />
        <Rectangle Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Fill="Black"
                   Opacity=".5"
                   RenderOptions.EdgeMode="Aliased" />
        <Rectangle Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="0"
                   Fill="{StaticResource AppLightBackgroundBrush}"
                   Opacity="{StaticResource ShadeOpacity}"
                   RenderOptions.EdgeMode="Aliased" />
        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   LastChildFill="True">
            <Image Height="20"
                   Margin="8"
                   VerticalAlignment="Center"
                   DockPanel.Dock="Left"
                   Source="{Binding Icon,
                                    RelativeSource={RelativeSource FindAncestor,
                                                                   AncestorType=paranoia:MainWindow}}" />
            <TextBlock Margin="0,-3,0,0"
                       VerticalAlignment="Center"
                       FontSize="17"
                       Style="{StaticResource AppTitleTextStyle}"
                       Text="{Binding Title,
                                      RelativeSource={RelativeSource FindAncestor,
                                                                     AncestorType=paranoia:MainWindow}}" />
        </DockPanel>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="5"
              HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <!--  help button  -->
                <ColumnDefinition Width="Auto" />
                <!--  minimize button  -->
                <ColumnDefinition Width="Auto" />
                <!--  restore down button  -->
                <ColumnDefinition Width="Auto" />
                <!--  maximize down button  -->
                <ColumnDefinition Width="Auto" />
                <!--  close button  -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{DynamicResource {ComponentResourceKey ResourceId=HelpButtonStyle, TypeInTargetAssembly={x:Type paranoia:App}}}" />
            <Button Grid.Column="1" Style="{DynamicResource {ComponentResourceKey ResourceId=MinimizeButtonStyle, TypeInTargetAssembly={x:Type paranoia:App}}}" />
            <Button Grid.Column="2"
                    Style="{DynamicResource {ComponentResourceKey ResourceId=MaximizeButtonStyle,
                                                                  TypeInTargetAssembly={x:Type paranoia:App}}}"
                    Visibility="{Binding IsNormalized,
                                         Converter={StaticResource BooleanToVisibilityConverter},
                                         RelativeSource={RelativeSource FindAncestor,
                                                                        AncestorType=paranoia:MainWindow}}" />
            <Button Grid.Column="3"
                    Style="{DynamicResource {ComponentResourceKey ResourceId=RestoreDownButtonStyle,
                                                                  TypeInTargetAssembly={x:Type paranoia:App}}}"
                    Visibility="{Binding IsMaximized,
                                         Converter={StaticResource BooleanToVisibilityConverter},
                                         RelativeSource={RelativeSource FindAncestor,
                                                                        AncestorType=paranoia:MainWindow}}" />
            <Button Grid.Column="4" Style="{DynamicResource {ComponentResourceKey ResourceId=CloseButtonStyle, TypeInTargetAssembly={x:Type paranoia:App}}}" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0"
                       Grid.RowSpan="3"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="0,0,0,8"
                       Fill="{StaticResource AppLightBackgroundBrush}"
                       Opacity="{StaticResource ShadeOpacity}"
                       RenderOptions.EdgeMode="Aliased" />
            <Rectangle Grid.Row="3"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Fill="{StaticResource AppLightBackgroundBrush}"
                       Opacity="{StaticResource ShadeOpacity}"
                       RenderOptions.EdgeMode="Aliased" />
            <Image Grid.Row="0"
                   Grid.Column="0"
                   Width="100"
                   Height="100"
                   Margin="8,24,8,8"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   DataContext="{Binding SelectedAccount}"
                   Source="{Binding Address,
                                    Converter={StaticResource GravatarImageConverter},
                                    IsAsync=True}"
                   Stretch="UniformToFill" />
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="8,0,0,0"
                       DataContext="{Binding SelectedAccount}"
                       Style="{StaticResource AppTitleTextStyle}"
                       Text="{Binding Name}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap" />
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="8,0,0,24"
                       DataContext="{Binding SelectedAccount}"
                       Style="{StaticResource AppSubtitleTextStyle}"
                       Text="{Binding Address}"
                       TextTrimming="CharacterEllipsis" />
            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="8,0,0,6"
                       VerticalAlignment="Center"
                       DataContext="{Binding SelectedAccount}"
                       FontSize="{StaticResource AppExtraLargeFontSize}"
                       Style="{StaticResource AppTitleTextStyle}">
                <Run Text="{x:Static properties:Resources.ContactsTitle}" />
                <Run Foreground="{StaticResource AppControlBrush}" Text="{Binding Contacts, Mode=OneWay, StringFormat={}({0}), Converter={StaticResource CollectionCounter}}" />
            </TextBlock>
            <ListView Grid.Row="4"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="0"
                      Background="Transparent"
                      BorderThickness="0"
                      DataContext="{Binding SelectedAccount}"
                      ItemsSource="{Binding Contacts}"
                      SelectedValue="{Binding SelectedContact,
                                              Mode=TwoWay}"
                      d:DataContext="{d:DesignInstance {x:Type paranoia:MailAccountContext}}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="6,3,6,3" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0"
                                   Grid.Column="0"
                                   Width="38"
                                   Margin="0,0,6,0"
                                   Source="{Binding Address,
                                                    Converter={StaticResource GravatarImageConverter}}" />
                            <StackPanel Grid.Column="1"
                                        Margin="0,-3,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock FontSize="18"
                                           Style="{StaticResource AppTitleTextStyle}"
                                           Text="{Binding Name}" />
                                <TextBlock FontSize="{StaticResource AppSmallFontSize}"
                                           Style="{StaticResource AppSubtitleTextStyle}"
                                           Text="{Binding Address}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="1"
                      Style="{StaticResource VerticalSplitterStyle}" />
        <StackPanel Grid.Row="0"
                    Grid.Column="2"
                    Orientation="Horizontal">
            <TextBox Margin="1,0,0,0"
                     Style="{StaticResource AppSearchTextBoxStyle}"
                     Text="{Binding QueryString,
                                    Mode=TwoWay}"
                     ui:Watermark.IsEnabled="True"
                     ui:Watermark.Text="{x:Static properties:Resources.SearchBoxWatermark}" />
        </StackPanel>
        <Grid Grid.Row="1"
              Grid.Column="2"
              Grid.ColumnSpan="3"
              Panel.ZIndex="500">
            <ListView HorizontalContentAlignment="Stretch"
                      Background="Transparent"
                      BorderThickness="0"
                      DataContext="{Binding SelectedAccount}"
                      ItemsSource="{Binding Mailboxes}"
                      Padding="0"
                      SelectedValue="{Binding SelectedMailbox,
                                              Mode=TwoWay}"
                      d:DataContext="{d:DesignInstance {x:Type paranoia:MailAccountContext}}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="12,2,12,2" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="MailboxLayoutRoot">
                            <Grid.InputBindings>
                                <KeyBinding Key="Delete" Command="{Binding DropMailboxCommand}" />
                            </Grid.InputBindings>
                            <TextBlock Margin="3"
                                       VerticalAlignment="Center"
                                       FontSize="{StaticResource AppLargeFontSize}"
                                       FontWeight="Thin"
                                       Style="{StaticResource AppNormalTextStyle}"
                                       Text="{Binding Type,
                                                      Converter={StaticResource MailboxLocalizer}}">
                                <TextBlock.Foreground>
                                    <Binding Path="IsAssigned">
                                        <Binding.Converter>
                                            <converters:BooleanToBrushConverter BrushForFalse="{StaticResource AppDisabledTextBrush}" BrushForTrue="{StaticResource AppLightTextBrush}" />
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <Popup x:Name="AssignmentPopup"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsAssignable,
                                                    Mode=OneWay}"
                                   Placement="Center"
                                   PlacementTarget="{Binding ElementName=MailboxLayoutRoot}"
                                   StaysOpen="False"
                                   VerticalOffset="320">
                                <StackPanel Width="300"
                                            Height="600"
                                            Margin="0,0,8,8">
                                    <StackPanel.Effect>
                                        <DropShadowEffect />
                                    </StackPanel.Effect>
                                    <Polygon Fill="{StaticResource AppLightBackgroundBrush}"
                                             Points="150,0 140,12 160,12"
                                             Stroke="{DynamicResource {ComponentResourceKey ResourceId=AppAccentBrush,
                                                                                            TypeInTargetAssembly={x:Type paranoia:App}}}" />
                                    <Border Margin="0,-1,0,0"
                                            Background="{StaticResource AppLightBackgroundBrush}"
                                            BorderBrush="{DynamicResource {ComponentResourceKey ResourceId=AppAccentBrush,
                                                                                                TypeInTargetAssembly={x:Type paranoia:App}}}"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Rectangle Grid.Row="0"
                                                       Width="18.5"
                                                       Height="2"
                                                       Margin="0,-1.4,0,0"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Top"
                                                       Panel.ZIndex="500"
                                                       Fill="{StaticResource AppLightBackgroundBrush}"
                                                       RenderOptions.EdgeMode="Aliased"
                                                       StrokeThickness="0" />
                                            <StackPanel Grid.Row="0"
                                                        Margin="6,6,6,0"
                                                        Panel.ZIndex="250">
                                                <TextBlock Style="{StaticResource AppTitleTextStyle}" Text="{Binding Type, Converter={StaticResource MailboxLocalizer}}" />
                                                <TextBlock FontSize="{StaticResource AppSmallFontSize}"
                                                           Style="{StaticResource AppSubtitleTextStyle}"
                                                           Text="{x:Static properties:Resources.MailboxAssignmentDescription}" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="1"
                                                        Margin="0,12,0,6"
                                                        Background="{StaticResource AppBackgroundBrush}">
                                                <Border Padding="6">
                                                    <TreeView x:Name="CandidatesView"
                                                              MinHeight="200"
                                                              Background="{StaticResource AppBackgroundBrush}"
                                                              BorderThickness="0"
                                                              ItemsSource="{Binding MailboxCandidates}"
                                                              SelectedValuePath="Info">
                                                        <TreeView.ItemContainerStyle>
                                                            <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                                                            <Style TargetType="{x:Type TreeViewItem}">
                                                                <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                                                                <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                                                            </Style>
                                                            <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                                                        </TreeView.ItemContainerStyle>
                                                        <TreeView.ItemTemplate>
                                                            <HierarchicalDataTemplate DataType="paranoia:MailboxCandidateContext" ItemsSource="{Binding Children}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Width="20"
                                                                           VerticalAlignment="Center"
                                                                           RenderOptions.BitmapScalingMode="HighQuality"
                                                                           Source="Assets/folder.png" />
                                                                    <TextBlock VerticalAlignment="Center"
                                                                               Style="{StaticResource AppNormalTextStyle}"
                                                                               Text="{Binding Name}">
                                                                        <TextBlock.Foreground>
                                                                            <Binding Path="IsSelectable">
                                                                                <Binding.Converter>
                                                                                    <converters:BooleanToBrushConverter BrushForFalse="{StaticResource AppDisabledTextBrush}" BrushForTrue="{StaticResource AppLightTextBrush}" />
                                                                                </Binding.Converter>
                                                                            </Binding>
                                                                        </TextBlock.Foreground>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </HierarchicalDataTemplate>
                                                        </TreeView.ItemTemplate>
                                                    </TreeView>
                                                </Border>

                                            </StackPanel>
                                            <Button Grid.Row="2"
                                                    Margin="6,0,6,6"
                                                    HorizontalAlignment="Right"
                                                    Command="{Binding AssignMailboxCommand}"
                                                    CommandParameter="{Binding SelectedValue,
                                                                               ElementName=CandidatesView}"
                                                    Content="Assign"
                                                    Padding="3" />
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Popup>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="2"
              Margin="0,8,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Grid.Row="0"
                       Grid.RowSpan="2"
                       Fill="{StaticResource AppLightBackgroundBrush}"
                       Opacity="{StaticResource ShadeOpacity}" />
            <TextBlock Grid.Row="0"
                       Margin="6,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="{StaticResource AppExtraLargeFontSize}"
                       Style="{StaticResource AppTitleTextStyle}">
                <Run Text="{x:Static properties:Resources.MessagesTitle}" />
                <Run Foreground="{StaticResource AppControlBrush}" 
                     Text="{Binding Messages, Mode=OneWay, StringFormat={}({0}), Converter={StaticResource CollectionCounter}}" />
            </TextBlock>
            <ListView HorizontalContentAlignment="Stretch"
                      Grid.Row="1"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemsSource="{Binding Source={StaticResource MessagesSource}}"
                      SelectionChanged="OnMessageSelectionChanged"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="6,3,6,3" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                        <Setter Property="ToolTip" Value="{Binding Subject}" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="paranoia:MailMessageContext">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Row="0"
                                       Grid.RowSpan="2"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2" />
                            <Image Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Width="42"
                                   Margin="0,0,6,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="{Binding FromAddress,
                                                    Converter={StaticResource GravatarImageConverter},
                                                    IsAsync=True}" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       FontSize="17"
                                       FontWeight="Thin"
                                       Style="{StaticResource AppNormalTextStyle}"
                                       Text="{Binding Subject,
                                                      Converter={StaticResource IgnoreLinebreaksConverter}}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalAlignment="Left"
                                       FontSize="{StaticResource AppSmallFontSize}"
                                       Style="{StaticResource AppSubtitleTextStyle}"
                                       Text="{Binding FromName}" />

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <GridSplitter Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="3"
                      Style="{StaticResource VerticalSplitterStyle}" />
        <Grid Grid.Row="2"
              Grid.Column="4"
              Margin="0,8,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle Grid.RowSpan="2"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Fill="{StaticResource AppLightBackgroundBrush}"
                       Opacity="{StaticResource ShadeOpacity}" />
            <Grid Grid.Row="0" />

            <Frame Grid.Row="1"
                   Margin="32"
                   NavigationUIVisibility="Hidden"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   ui:FrameExtensions.BindableSource="{Binding Html,
                                                               Mode=OneWay}" />

        </Grid>
    </Grid>
</ui:MetroWindow>