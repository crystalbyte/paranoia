<Window x:Class="Crystalbyte.Paranoia.UI.ShadowCaster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Crystalbyte.Paranoia.Properties"
        Title="ShadowCaster"
        Width="300"
        Height="300"
        Margin="0"
        AllowsTransparency="True"
        Background="Transparent"
        Padding="0"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        WindowStyle="None">
    <Grid>
        <Rectangle x:Name="Caster" Fill="Black">
            <Rectangle.Effect>
                <DropShadowEffect x:Name="DropShadowEffect"
                                  BlurRadius="8"
                                  ShadowDepth="2"
                                  Color="Black" />
            </Rectangle.Effect>
        </Rectangle>

    </Grid>
</Window>
