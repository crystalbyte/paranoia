<Window x:Class="Crystalbyte.Paranoia.UI.ShadowCaster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Crystalbyte.Paranoia.Properties"
        Title="ShadowCaster"
        Width="300"
        Height="300"
        Margin="0"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0"
        Padding="0"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Metro.Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Rectangle x:Name="Caster" Fill="Black">
            <Rectangle.Effect>
                <DropShadowEffect x:Name="DropShadowEffect"
                                  BlurRadius="8"
                                  Opacity="1"
                                  RenderingBias="Quality"
                                  ShadowDepth="0"
                                  Color="{StaticResource AppAccentColor}" />
            </Rectangle.Effect>
        </Rectangle>

    </Grid>
</Window>