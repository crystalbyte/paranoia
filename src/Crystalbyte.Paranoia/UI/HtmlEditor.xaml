<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:ui="clr-namespace:Crystalbyte.Paranoia.UI"
                    xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
                    mc:Ignorable="d">
    <Style x:Key="ButtonGroupStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="6" />
    </Style>
    <Style x:Key="GroupButtonLeftStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="1,1,0,1" />
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style x:Key="GroupButtonCenterStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0,1" />
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style x:Key="GroupButtonRightStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0,1,1,1" />
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style TargetType="ui:HtmlEditor">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ui:HtmlEditor">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <FrameworkElement.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="Copy" />
                                <MenuItem Command="Cut" />
                                <MenuItem Command="Paste" />
                                <Separator />
                                <MenuItem Command="Print" />
                                <Separator />
                                <MenuItem Command="SelectAll" />
                            </ContextMenu>
                        </FrameworkElement.ContextMenu>
                        <DockPanel LastChildFill="True">
                            <WrapPanel DockPanel.Dock="Top">
                                <StackPanel Style="{StaticResource ButtonGroupStyle}">
                                    <Button Style="{StaticResource GroupButtonLeftStyle}" />
                                    <Button Style="{StaticResource GroupButtonRightStyle}" />
                                </StackPanel>
                            </WrapPanel>
                            <wpf:ChromiumWebBrowser x:Name="PART_WebBrowser" />
                        </DockPanel>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
