<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:Crystalbyte.Paranoia.Themes;assembly=Crystalbyte.Paranoia.Themes">

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.MenuIconBrushKey}" Color="#5D5D5E" />

    <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" TargetType="Separator">
        <Setter Property="Margin" Value="0,2.2,0,2.2" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Rectangle Height="1"
                               Margin="34,0,0,0"
                               HorizontalAlignment="Stretch"
                               Fill="{DynamicResource {x:Static themes:ThemeResourceKeys.SeparatorForegroundBrushKey}}"
                               RenderOptions.EdgeMode="Aliased"
                               StrokeThickness="0" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ContextMenu">
        <Setter Property="Padding" Value="0,2" />
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0,1" />
    </Style>

</ResourceDictionary>