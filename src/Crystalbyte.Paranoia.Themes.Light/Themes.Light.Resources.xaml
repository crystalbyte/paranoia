<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:themes="clr-namespace:Crystalbyte.Paranoia.Themes;assembly=Crystalbyte.Paranoia.Themes">



    <!--  Application Scope  -->

    <!--  <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppAccentBrushKey}" Color="#E86C43" />  -->
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppAccentBrushKey}" Color="#5299EA" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppSuccessBrushKey}" Color="ForestGreen" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppFailureBrushKey}" Color="Tomato" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppWarningBrushKey}" Color="Orange" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppIconBrushKey}" Color="#C69A63" />

    <!--  Window Scope  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowBackgroundBrushKey}" Color="White" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowBorderBrushKey}" Color="#4668C5" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowShadowBrushKey}" Color="Black" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowMenuBackgroundBrushKey}" Color="#505052" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.WindowBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <!--  Flyout Scope  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.FlyoutBackgroundBrushKey}" Color="#353536" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.FlyoutOverlayBrushKey}" Color="Black" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.FlyoutTextForegroundBrushKey}" Color="WhiteSmoke" />


    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonFlyoutBackgroundBrushKey}" Color="#2F2F30" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonFlyoutBorderBrushKey}" Color="#555556" />
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.FlyoutOverlayOpacityKey}">.2</system:Double>


    <!--  General Text Scope (Title)  -->

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.TitleFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TitleFontSizeKey}">28</system:Double>
    <FontWeight x:Key="{x:Static themes:ThemeResourceKeys.TitleFontWeightKey}">Thin</FontWeight>

    <!--  General Text Scope (Subtitle)  -->

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.SubtitleFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.SubtitleFontSizeKey}">18</system:Double>
    <FontWeight x:Key="{x:Static themes:ThemeResourceKeys.SubtitleFontWeightKey}">Thin</FontWeight>

    <!--  General Text Scope (Text)  -->

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.TextFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TextExtraLargeFontSizeKey}">26</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TextMediumFontSizeKey}">12</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TextMediumLargeFontSizeKey}">16</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TextLargeFontSizeKey}">18</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TextSmallFontSizeKey}">10</system:Double>
    <FontWeight x:Key="{x:Static themes:ThemeResourceKeys.TextFontWeightKey}">Normal</FontWeight>
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.TextForegroundBrushKey}" Color="#222" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.TextContrastForegroundBrushKey}" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.TextSecondaryForegroundBrushKey}" Color="#99A" />

    <!--  Control Scope  -->

    <!--
        <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlBackgroundBrushKey}" Color="WhiteSmoke" />
        <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlLightBackgroundBrushKey}" Color="White" />
        <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlDarkBackgroundBrushKey}" Color="#DDD" />
    -->
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlDisabledForegroundBrushKey}" Color="{x:Static SystemColors.GrayTextColor}" />


    <!--  Control Scope (CheckBox)  -->

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxMarginKey}"
               Bottom="3"
               Left="0"
               Right="0"
               Top="3" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxPaddingKey}"
               Bottom="3"
               Left="3"
               Right="3"
               Top="3" />


    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxBackgroundBrushKey}" Color="#333" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxBorderBrushKey}" Color="{x:Static SystemColors.ControlDarkColor}" />

    <!--  Control Scope (RadioButton)  -->

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonMarginKey}"
               Bottom="3"
               Left="0"
               Right="0"
               Top="3" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonPaddingKey}"
               Bottom="3"
               Left="3"
               Right="3"
               Top="3" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonBackgroundBrushKey}" Color="{x:Static SystemColors.ControlColor}" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonBorderBrushKey}" Color="{x:Static SystemColors.ControlDarkColor}" />

</ResourceDictionary>