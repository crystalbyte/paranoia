<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:themes="clr-namespace:Crystalbyte.Paranoia.Themes;assembly=Crystalbyte.Paranoia.Themes">

    <!--
        <SolidColorBrush x:Key="SliderThumb.Static.Foreground" Color="#FFE5E5E5" />
        <SolidColorBrush x:Key="SliderThumb.MouseOver.Background" Color="#FFDCECFC" />
        <SolidColorBrush x:Key="SliderThumb.MouseOver.Border" Color="#FF7Eb4EA" />
        <SolidColorBrush x:Key="SliderThumb.Pressed.Background" Color="#FFDAECFC" />
        <SolidColorBrush x:Key="SliderThumb.Pressed.Border" Color="#FF569DE5" />
        <SolidColorBrush x:Key="SliderThumb.Disabled.Background" Color="#FFF0F0F0" />
        <SolidColorBrush x:Key="SliderThumb.Disabled.Border" Color="#FFD9D9D9" />
        <SolidColorBrush x:Key="SliderThumb.Static.Background" Color="#FFF0F0F0" />
        <SolidColorBrush x:Key="SliderThumb.Static.Border" Color="#FFACACAC" />
    -->

    <!--  Application Scope  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppAccentBrushKey}" Color="#4668C5" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppSuccessBrushKey}" Color="ForestGreen" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppFailureBrushKey}" Color="Tomato" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.AppWarningBrushKey}" Color="Orange" />

    <!--  Window Scope  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowBackgroundBrushKey}" Color="GhostWhite" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowBorderBrushKey}" Color="#4668C5" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowShadowBrushKey}" Color="Black" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowMenuBackgroundBrushKey}" Color="#DDDDEE" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.WindowTitleBackgroundBrushKey}" Color="#CCCCDD" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.WindowBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <!--  Flyout Scope  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.FlyoutBackgroundBrushKey}" Color="#CCC" />

    <!--  General Text Scope (Title)  -->

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.TitleFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.TitleFontSizeKey}">28</system:Double>
    <FontWeight x:Key="{x:Static themes:ThemeResourceKeys.TitleFontWeightKey}">Thin</FontWeight>

    <!--  General Text Scope (Subtitle)  -->

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.SubtitleFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.SubtitleFontSizeKey}">18</system:Double>
    <FontWeight x:Key="{x:Static themes:ThemeResourceKeys.SubtitleFontWeightKey}">Thin</FontWeight>

    <!--  General Text Scope (Text)  -->

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.NormalTextFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.NormalTextExtraLargeFontSizeKey}">26</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.NormalTextLargeFontSizeKey}">18</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.NormalTextMediumFontSizeKey}">12</system:Double>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.NormalTextSmallFontSizeKey}">10</system:Double>
    <FontWeight x:Key="{x:Static themes:ThemeResourceKeys.NormalTextFontWeightKey}">Normal</FontWeight>
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.NormalTextForegroundBrushKey}" Color="#333" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.NormalTextSecondaryForegroundBrushKey}" Color="#666" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlDisabledForegroundBrushKey}" Color="{x:Static SystemColors.GrayTextColor}" />

    <!--  Control Scope  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlBackgroundBrushKey}" Color="#F0F0F0" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlLightBackgroundBrushKey}" Color="White" />
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.ControlDarkBackgroundBrushKey}" Color="#EEE" />

    <!--  Control Scope (TextBox)  -->

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.TextBoxMarginKey}"
               Bottom="3"
               Left="0"
               Right="0"
               Top="3" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.TextBoxPaddingKey}"
               Bottom="3"
               Left="3"
               Right="3"
               Top="3" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.TextBoxBackgroundBrushKey}" Color="{x:Static SystemColors.ControlColor}" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.TextBoxBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.TextBoxBorderBrushKey}" Color="{x:Static SystemColors.ControlDarkColor}" />

    <!--  Control Scope (CheckBox)  -->

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxMarginKey}"
               Bottom="3"
               Left="0"
               Right="0"
               Top="3" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxPaddingKey}"
               Bottom="3"
               Left="3"
               Right="3"
               Top="3" />


    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxBackgroundBrushKey}" Color="#333" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.CheckBoxBorderBrushKey}" Color="{x:Static SystemColors.ControlDarkColor}" />

    <!--  Control Scope (Button)  -->



    <!--  Control Scope (RadioButton)  -->

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonMarginKey}"
               Bottom="3"
               Left="0"
               Right="0"
               Top="3" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonPaddingKey}"
               Bottom="3"
               Left="3"
               Right="3"
               Top="3" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonBackgroundBrushKey}" Color="{x:Static SystemColors.ControlColor}" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.RadioButtonBorderBrushKey}" Color="{x:Static SystemColors.ControlDarkColor}" />

    <!--  Control Scope (Menu)  -->

    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.MenuBackgroundBrushKey}" Color="Gray" />

    <Thickness x:Key="{x:Static themes:ThemeResourceKeys.MenuBorderThicknessKey}"
               Bottom="1"
               Left="1"
               Right="1"
               Top="1" />

    <FontFamily x:Key="{x:Static themes:ThemeResourceKeys.MenuFontFamilyKey}">Segoe UI</FontFamily>
    <system:Double x:Key="{x:Static themes:ThemeResourceKeys.MenuFontSizeKey}">12</system:Double>
    <SolidColorBrush x:Key="{x:Static themes:ThemeResourceKeys.MenuBorderBrushKey}" Color="{x:Static SystemColors.ControlDarkColor}" />

</ResourceDictionary>